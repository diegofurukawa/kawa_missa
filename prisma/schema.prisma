generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Tenant {
  id              String   @id @default(uuid())
  name            String
  denomination    String?
  legalName       String?
  document        String?
  phone           String?
  email           String?
  responsibleName String?
  createdAt       DateTime @default(now())
  address         Address?
  configs         Config[]
  masses          Mass[]
  users           User[]
}

model User {
  id        String   @id @default(uuid())
  tenantId  String
  name      String
  email     String   @unique
  phone     String?
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}

model Address {
  id           String  @id @default(cuid())
  tenantId     String  @unique
  zipCode      String
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String
  country      String  @default("Brasil")
  tenant       Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Config {
  id                String   @id @default(cuid())
  tenantId          String
  cronConfig        Json
  participantConfig Json
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  tenant            Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

model Mass {
  id           String   @id @default(cuid())
  tenantId     String
  slug         String
  date         DateTime
  participants Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  tenant       Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, slug])
}
